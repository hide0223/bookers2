<%= render 'list', user: @user  %>

<div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table class="table">
        <tr>
          <th>
            <%= link_to user_path(@book.user_id) do %>
              <%= image_tag @book.user.get_profile_image(100,100) %>
            <% end %>
          </th>
          <th>
            <%= link_to @book.user.name, user_path(@book.user_id) %>
          </th>
          </th>
          <th>
            <%= link_to @book.title, book_path(@book.id) %>
          </th>
          <th>
            <%= @book.body %>
          </th>
          <th>
            <% if @book.user == current_user %>
              <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %>
            <% end %>
          </th>
          <th>
            <% if @book.user == current_user %>
              <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger" %>
            <% end %>
          </th>
        </tr>
      </table>
    </div>
  </div>
</div>