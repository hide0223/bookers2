<div class="User">
  <h1>User Info</h1>
  <%= image_tag @book.user.get_profile_image(100,100) %>
  <p>Account Name: <%= @book.user.name %></p>
  <p>introduction: <%= @book.user.introduction %></p>
  <p><%= link_to "プロフィール編集", edit_user_path(@book.user) %></p>
</div>

<div class="New book">
  <%= form_with model: Book.new do |f| %>
    <h1>New book</h1>
    <p>Title</p>
    <%= f.text_field :title %>
	
    <p>Opinion</p>
    <%= f.text_area :body %>
	
    <%= f.submit 'Create Book' %>
  <% end %>
</div>

<h1>Book detail</h1>
<%= link_to user_path(@book.user_id) do %>
    <%= image_tag @book.user.get_profile_image(100,100) %>
<% end %>
<p><%= link_to @book.user.name, user_path(@book.user_id) %></p>
<p><%= link_to @book.title, book_path(@book.id) %></p>
<p><%= @book.body %></p>
<% if @book.user == current_user %>
  <p><%= link_to "Edit", edit_book_path(@book.id) %></p>
<% end %>
<% if @book.user == current_user %>
  <p><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></p>
<% end %>
