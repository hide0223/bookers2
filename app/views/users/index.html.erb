<div class="User">
  <h1>User Info</h1>
  <%= image_tag @user.get_profile_image(100,100) %>
  <p>Account Name: <%= @user.name %></p>
  <p>introduction: <%= @user.introduction %></p>

  <% if @user == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>

<div class="New book">
  <%= form_with model: Book.new do |f| %>
    <h1>New book</h1>
    <p>Title</p>
    <%= f.text_field :title %>
	
    <p>Opinion</p>
    <%= f.text_area :body %>
	
    <%= f.submit 'Create Book' %>
  <% end %>
</div>

<h1>Users</h1>
<% @users.each do |user| %>
  <%= image_tag user.get_profile_image(100, 100) %>
    <p><%= user.name %></p>
    <%= link_to "Show", user_path(user) %>
<% end %>




